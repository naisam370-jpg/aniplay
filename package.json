{
  "name": "aniplay",
  "version": "1.0.0-tr",
  "description": "Professional anime player with MyAnimeList integration and library management",
  "main": "src/main/index.js",
  "scripts": {
    "start": "electron . --disable-gpu --no-sandbox",
    "dev": "electron . --development",
    "build": "electron-packager . AniPlay --platform=win32,linux --arch=x64 --out=dist --overwrite --icon=assets/icon",
    "package-linux": "electron-packager . AniPlay --platform=linux --arch=x64 --out=dist --overwrite --icon=assets/icon"
  },
  "keywords": [
    "anime",
    "player",
    "electron",
    "mpv",
    "myanimelist",
    "anilist",
    "library"
  ],
  "author": "Naisam",
  "license": "GPL-3.0-only",
  "devDependencies": {
    "electron": "11.5.0"
  },
  "dependencies": {
    "cheerio": "1.0.0-rc.3",
    "electron-packager": "^17.1.2",
    "fuse.js": "6.4.6",
    "sqlite3": "5.0.0"
  }
}
