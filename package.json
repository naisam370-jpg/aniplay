{
  "name": "aniplay",
  "version": "1.0.0",
  "description": "A professional video player with wide format support",
  "main": "src/main/index.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --development",
    "build": "electron-builder",
    "test": "jest",
    "lint": "eslint src/",
    "package-linux": "electron-builder --linux"
  },
  "keywords": ["video", "player", "electron", "mpv", "anime"],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "jest": "^29.7.0",
    "eslint": "^8.50.0"
  },
  "dependencies": {
    "node-mpv": "^2.3.0"
  },
  "build": {
    "appId": "com.yourname.aniplay",
    "productName": "AniPlay",
    "directories": {
      "output": "dist"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ]
    }
  }
}
